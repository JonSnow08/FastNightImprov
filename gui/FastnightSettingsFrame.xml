<GUI name="settingsFastnight">
    <GuiElement type="empty" profile="uiInGameMenuFrame">
        <!-- Static page header -->
        <GuiElement type="empty" profile="ingameMenuFrameHeaderPanel" id="frameHeader">
            <GuiElement type="bitmap" profile="ingameMenuGeneralSettingsHeaderIcon" />
            <GuiElement type="text" profile="ingameMenuFrameHeaderText" text="$l10n_gui_fn_Setting" />
        </GuiElement>

        <!-- Layout content box -->
        <GuiElement type="empty" profile="ingameMenuSettingsBox" id="settingsContainer">
            <GuiElement type="bitmap" profile="topScrollClipper" name="topClipper" />
            <GuiElement type="bitmap" profile="bottomScrollClipper" name="bottomClipper" />

            <GuiElement type="scrollingLayout" profile="ingameMenuSettingsLayout" id="boxLayout" topClipperElementName="topClipper" bottomClipperElementName="bottomClipper">
			
				<!-- Start Hour Day  -->
				<GuiElement type="multiTextOption" profile="multiTextOptionSettings" onClick="onClickStartDayHour" id="gui_fn_onClickStartDayHour">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_StartDayHour" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_StartDayHourToolTip" />
				</GuiElement>
				<!-- Start Minute Day  -->
				<GuiElement type="multiTextOption" profile="multiTextOptionSettings" onClick="onClickStartDayMinute" id="gui_fn_onClickStartDayMinute">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_StartDayMinute" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_StartDayMinuteToolTip" />
				</GuiElement>	
				<!-- DayTimeScale  -->
				<GuiElement type="multiTextOption" profile="multiTextOptionSettings" onClick="onClickDayTimeScale" id="gui_fn_onClickDayTimeScale">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_DayTimeScale" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_DayTimeScaleToolTip" />
				</GuiElement>			
				<!-- AutoDayTimeScale  -->
				<GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onClickAutoDayTimeScale" id="gui_fn_onClickAutoDayTimeScale">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_AutoDayTimeScale" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_AutoDayTimeScaleToolTip" />
				</GuiElement>
				<!-- Start Hour Night  -->
				<GuiElement type="multiTextOption" profile="multiTextOptionSettings" onClick="onClickStartNightHour" id="gui_fn_onClickStartNightHour">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_StartNightHour" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_StartNightHourToolTip" />
				</GuiElement>
				<!-- Start Minute Night  -->
				<GuiElement type="multiTextOption" profile="multiTextOptionSettings" onClick="onClickStartNightMinute" id="gui_fn_onClickStartNightMinute">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_StartNightMinute" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_StartNightMinuteToolTip" />
				</GuiElement>			
				<!-- NightTimeScale  -->
				<GuiElement type="multiTextOption" profile="multiTextOptionSettings" onClick="onClickNightTimeScale" id="gui_fn_onClickNightTimeScale">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_NightTimeScale" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_NightTimeScaleToolTip" />
				</GuiElement>				
				<!-- AutoNightTimeScale  -->
				<GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onClickAutoNightTimeScale" id="gui_fn_onClickAutoNightTimeScale">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_AutoNightTimeScale" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_AutoNightTimeScaleToolTip" />
				</GuiElement>		
				<!-- Show Help  -->
				<GuiElement type="checkedOption" profile="multiTextOptionSettings" onClick="onClickShowHelp" id="gui_fn_onClickShowHelp">
					<GuiElement type="button" profile="multiTextOptionSettingsLeft" />
					<GuiElement type="button" profile="multiTextOptionSettingsRight" />
					<GuiElement type="text" profile="multiTextOptionSettingsText" />
					<GuiElement type="text" profile="multiTextOptionSettingsTitle" text="$l10n_gui_fn_ShowHelp" />
					<GuiElement type="bitmap" profile="multiTextOptionSettingsBg" />
					<GuiElement type="text"   profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_ShowHelpToolTip" />
				</GuiElement>				
				<!-- Save Settings  -->
                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper" id="gui_fn_onClickSave">
                    <GuiElement type="button" profile="ingameMenuSettingsPauseButton" onClick="onClickSaveSettings" text="$l10n_gui_fn_Save"/>
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="$l10n_gui_fn_SaveToolTip" />
                </GuiElement>
            </GuiElement>
        </GuiElement>
    </GuiElement>
</GUI>